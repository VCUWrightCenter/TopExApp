{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
        "name": "topex-api",
        "image": "110259620030.dkr.ecr.us-east-1.amazonaws.com/topex-api",
        "essential": true,
        "memory": 200,
        "cpu": 1,
        "links": [
                "mongo"
        ],
        "environment": [
            {
                "name": "SERVICE2",
                "value": "service-2"
            },
            {
                "name": "SERVICE2_PORT",
                "value": "9090"
            }
        ]
        },
{
        "name": "service-1",
        "image": "km2411/flask-service1-aws:latest",
        "essential": true,
        "memory": 200,
        "cpu": 1,
        "portMappings": [
          {
            "hostPort": 8080,
            "containerPort": 8080
          }
        ],
        "links": [
              "service-2"
        ],
        "environment": [
          {
              "name": "MONGO_HOST",
              "value": "mongo"
          },
          {
              "name": "MONGO_PORT",
              "value": "27017"
          }
          ]
      } 
    ]
  }